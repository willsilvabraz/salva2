<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#13453A"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imagemItemCarrinho"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:srcCompat="@android:drawable/ic_menu_help" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nomeItemCarrinho"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/imagem"
                android:text="willian"
                android:textSize="28sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/valorItemCarrinho"
                    android:layout_width="163dp"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/textoNome"
                    android:text="Valor" />

                <TextView
                    android:id="@+id/quantidadeItemCarrinho"
                    android:layout_width="163dp"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/textoNome"
                    android:text="Quantidade" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    </LinearLayout>


    <Button
        android:id="@+id/removerDoCarrinho"
        android:layout_width="152dp"
        android:layout_height="wrap_content"
        android:text="Remover do Carrinho" />


</LinearLayout>